@model IEnumerable<MvcS3Files.Models.FileItem>

<h2>Files</h2>

<p>
    <a asp-action="Create">Upload new file</a>
</p>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>FileKey</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.FileKey</td>
            <td>
                <a asp-action="Download" asp-route-id="@item.Id">Download</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>